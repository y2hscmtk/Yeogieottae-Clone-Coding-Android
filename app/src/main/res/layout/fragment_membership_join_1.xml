<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="400dp"
        android:fontFamily="@font/jalnan"
        android:text="@string/title"
        android:textColor="#F45859"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/bar"
        android:layout_width="120dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="56dp"
        android:background="@color/middle_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <View
        android:id="@+id/bar4"
        android:layout_width="120dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="56dp"
        android:background="@color/middle_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_kakao"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_round"
        app:icon="@drawable/ic_kakao_resize"
        app:iconTint="@color/kakao_brown"
        app:iconGravity="textStart"
        app:backgroundTint="@color/kakao_yellow"
        android:text="카카오로 시작하기"
        android:textColor="@color/kakao_brown"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_naver"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_round"
        app:backgroundTint="@color/naver_green"

        app:icon="@drawable/ic_naver_resize"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        android:text="네이버로 시작하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_kakao" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_facebook"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_round"

        app:icon="@drawable/ic_facebook_resize"
        app:iconTint="@null"
        app:iconGravity="textStart"
        app:backgroundTint="@color/facebook_blue"

        android:text="페이스북으로 시작하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_naver" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_google"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_round"
        android:textColor="#A0302F2F"
        android:text="구글로 시작하기"

        app:icon="@drawable/ic_google_resize"
        app:iconTint="@null"
        app:iconGravity="textStart"
        app:backgroundTint="@color/white"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_facebook" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_email"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="@color/sky_blue"
        android:text="이메일로 시작하기"
        android:textColor="@color/middle_blue"

        android:textStyle="bold"
        app:backgroundTint="@color/sky_blue"
        app:icon="@drawable/ic_email_resize"
        app:iconTint="@color/middle_blue"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_google" />

    <TextView
        android:id="@+id/btn_join_by_business"
        android:layout_width="161dp"
        android:layout_height="25dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="53dp"
        android:text="비즈니스 로그인/회원가입"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_email" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="로그인/회원가입"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/bar4"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@+id/bar"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>